<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FinalProject.CheckingAddWindow"
        Title="CheckingAddWindow">
    <Grid>
        <StackPanel>
            
            <StackPanel>
                <TextBlock>Добавление</TextBlock>
            </StackPanel>
            
            <StackPanel Orientation="Vertical">
                <ComboBox Name="EmployeeComboBox"></ComboBox>
                <ComboBox Name="DepartmentComboBox"></ComboBox>
                <ComboBox Name="AreaComboBox"></ComboBox>
                <DatePicker Name="DateTextBox"></DatePicker>
                <ComboBox Name="ResultComboBox"></ComboBox>
            </StackPanel>
            
            <StackPanel>
                <Button Click="AddChecking">Добавить</Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
